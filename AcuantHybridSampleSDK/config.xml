<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cssn.cssnsamplesdk" 
    version="1.2"       
    android-versionCode="7"
    ios-CFBundleVersion="1.2.5">

    <name>AcuantHybridSampleSDK</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <preference name="orientation" value="default" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true"/>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="17" />
        <preference name="android-targetSdkVersion" value="19" />
        <preference name="android-compileSdkVersion" value="22" />

        <splash src="www/img/splash/screen-land-hdpi.png" density="land-hdpi"/>
        <splash src="www/img/splash/screen-land-ldpi.png" density="land-ldpi"/>
        <splash src="www/img/splash/screen-land-mdpi.png" density="land-mdpi"/>
        <splash src="www/img/splash/screen-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="www/img/splash/screen-port-hdpi.png" density="port-hdpi"/>
        <splash src="www/img/splash/screen-port-ldpi.png" density="port-ldpi"/>
        <splash src="www/img/splash/screen-port-mdpi.png" density="port-mdpi"/>
        <splash src="www/img/splash/screen-port-xhdpi.png" density="port-xhdpi"/>

        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <preference name="deployment-target" value="8.0" />

        <splash src="www/img/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="www/img/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="www/img/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/img/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/img/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="www/img/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="www/img/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="www/img/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="www/img/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="www/img/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->

        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/icons/icon-60.png" width="60" height="60" />
        <icon src="www/img/icons/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/icons/icon-76.png" width="76" height="76" />
        <icon src="www/img/icons/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/img/icons/icon-40.png" width="40" height="40" />
        <icon src="www/img/icons/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/icons/icon.png" width="57" height="57" />
        <icon src="www/img/icons/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/icons/icon-72.png" width="72" height="72" />
        <icon src="www/img/icons/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/img/icons/icon-small.png" width="29" height="29" />
        <icon src="www/img/icons/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/img/icons/icon-50.png" width="50" height="50" />
        <icon src="www/img/icons/icon-50@2x.png" width="100" height="100" />

        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

    </platform>

</widget>
